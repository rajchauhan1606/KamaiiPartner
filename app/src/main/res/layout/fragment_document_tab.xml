<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_linear_bg"
            android:layout_margin="@dimen/margin_10"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/layadll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.kamaii.partner.utils.CustomTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_documents"
                        android:textColor="@color/dark_blue_color"
                        android:textSize="16dp">

                    </com.kamaii.partner.utils.CustomTextViewBold>

                    <com.kamaii.partner.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" *"
                        android:visibility="gone"
                        android:textColor="@color/dark_red"
                        android:textSize="14dp">

                    </com.kamaii.partner.utils.CustomTextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">


                        <ImageView
                            android:id="@+id/layaafront"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/aadhar_cardfront_photo">

                        </ImageView>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:id="@+id/layaaback"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/upload_aadhar_cardback_photo">

                        </ImageView>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layallrcbook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">


                        <ImageView
                            android:id="@+id/laypancard"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:background="@drawable/pan_card_photo"
                            android:scaleType="fitCenter">

                        </ImageView>

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        android:layout_marginLeft="8dp"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp">


                        <ImageView
                            android:id="@+id/laycancelcheque"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true"
                            android:background="@drawable/cancel_cheque_photo"
                            android:orientation="vertical"
                            android:scaleType="fitXY">

                        </ImageView>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pad_20"
            android:layout_marginRight="@dimen/pad_20"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/pad_20"
            android:layout_below="@+id/layall"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <com.kamaii.partner.utils.CustomTextViewBold
                android:id="@+id/cancelbtn"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:background="@drawable/dark_blue_btn_bg"
                android:gravity="center"
                android:text="No"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.kamaii.partner.utils.CustomTextViewBold
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:background="@drawable/custom_blue_curverd_bg"
                android:gravity="center"
                android:text="Submit Document"
                android:layout_marginLeft="@dimen/margin_10"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>
</layout>
