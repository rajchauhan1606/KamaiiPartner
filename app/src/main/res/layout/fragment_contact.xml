<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:gravity="center"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        tools:cardBackgroundColor="@color/white"
        tools:cardCornerRadius="5dp"
        tools:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    android:src="@drawable/help" />

                <com.kamaii.partner.utils.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Need Any Help ?"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </com.kamaii.partner.utils.CustomTextViewBold>

                <com.kamaii.partner.utils.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="You can alwlays reach out to"
                    android:textSize="12dp">

                </com.kamaii.partner.utils.CustomTextViewBold>

                <com.kamaii.partner.utils.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="us anytime on"
                    android:textSize="12dp">

                </com.kamaii.partner.utils.CustomTextViewBold>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardchat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonroundhelp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/whatsupchat" />

                <com.kamaii.partner.utils.CustomTextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Click to live chat on WhatsApp"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold">

                </com.kamaii.partner.utils.CustomTextViewBold>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cardemail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonroundhelp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center"
                    android:src="@drawable/cemail" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.kamaii.partner.utils.CustomTextViewBold

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="support@kamaii.in"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold">

                    </com.kamaii.partner.utils.CustomTextViewBold>

                    <com.kamaii.partner.utils.CustomTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to drop on Email"
                        android:textSize="14dp">

                    </com.kamaii.partner.utils.CustomTextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardcall"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/buttonroundhelp"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ccall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.kamaii.partner.utils.CustomTextViewBold

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9909998402"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold">

                    </com.kamaii.partner.utils.CustomTextViewBold>

                    <com.kamaii.partner.utils.CustomTextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to Call"
                        android:textSize="14dp">

                    </com.kamaii.partner.utils.CustomTextView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>