<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/slot_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue_color">

        <com.kamaii.partner.utils.CustomTextViewBold
            android:id="@+id/timeslot_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/pad_15"
            android:paddingTop="@dimen/text_size_15"
            android:paddingRight="@dimen/text_size_15"
            android:paddingBottom="@dimen/text_size_15"
            android:text="10AM to 11AM"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <com.kamaii.partner.utils.CustomTextViewBold
            android:id="@+id/timeslot_view"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:visibility="gone"
            android:paddingLeft="@dimen/pad_15"
            android:paddingTop="@dimen/margin_10"
            android:paddingRight="@dimen/dimen_30dp"
            android:paddingBottom="@dimen/margin_10"
            android:textColor="@color/yellow_color"
            android:layout_alignBottom="@+id/timeslot_txt"
            android:background="@color/yellow_color"
            />
    </RelativeLayout>

</RelativeLayout>